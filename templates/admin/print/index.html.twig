{% block container %}

<div class="row">
  <div class="card p-4 col-12 ms-sm-auto">
    {# <h1 class="card-title">Data Pegawai</h1> #}
    <div class="card-body">
      <h1 class="mb-5">Absen Pegawai</h1>

      <div class="row mb-5">
        <div class="col-3">
          {{ form_start(form) }}
            {{ form_widget(form) }}
            
            <button type="submit" class="btn btn-primary mt-4">Ubah Tanggal</button>

          {{ form_end(form) }}
        </div>
      </div>      

      
      {# <a href="/admin/pegawai/create" class="btn btn-success mb-4"><i class="fas fa-plus"></i> Pilih Tanggal</a> #}
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama Lengkap</th>
            <th scope="col">Absen Masuk</th>
            <th scope="col">Absen Keluar</th>
            {# <th scope="col">Deskripsi</th> #}
          </tr>
        </thead>
        <tbody>
          {% for attendance in attendances %}
          <tr>
            <th scope="row">{{ loop.index }}</th>
            <td>{{ attendance.name }}</td>
            <td>{{ attendance.entered_at }}</td>
            <td>{{ attendance.exited_at }}</td>
            {# <td>{{ attendance.description }}</td> #}

          </tr>
          {% endfor %}
        </tbody>
      </table>
      <div>
      </div>
    </div>
  </div>


  <!-- /.modal -->
  {% endblock %}